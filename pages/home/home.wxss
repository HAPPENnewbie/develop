/* pages/home/home.wxss */
page{
    background: -webkit-linear-gradient(top,#e9f2ff,white, white);
  }
  
  /* 轮播图样式 */
  .body{
    width:100%;
    height:500rpx;
    justify-content: center;
    align-items: center;
    display: flex;
  }
  .swiper_view{
    height: 300rpx;
    width:90%;
  }
  swiper-item image{
    width:100%;
    height: 300rpx;
    border-radius: 30rpx;
    border:1px solid #8000000f;
  }
  
  
  
  /*图片样式设置*/
   #ima{
    width:200rpx;
   } 
  /*字体样式设置*/
   #font{
    padding-top: 20rpx;
    padding-bottom: 50rpx;
    color:#67A6F7;
    font-size: 20px;
    text-align: center;
   }
  
  /*对单个字体设置*/
   #fontPart{
    font-weight: bold;
   }
  
  /*主页按钮“开始聊天”，点击进入聊天功能*/
   #btn_startchat{
      padding:0;
      margin-top: 25%;
      margin-bottom: 5%;
      background-color:#3B89FD;
      color:#ffffff;
      width: 45%;
      height:100rpx;
      line-height: 100rpx;
   }
  
  
   /*底部提醒文字样式*/
  #note{
  
    padding-bottom: 0;
    color:#B2B5BA;
    font-size: 14px;
    text-align: center;
  }